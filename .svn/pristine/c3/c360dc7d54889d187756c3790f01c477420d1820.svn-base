<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/entry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150px_in720p">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_90px_in720p"
            android:layout_height="@dimen/_90px_in720p"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:src="@drawable/user_img"
             />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginTop="@dimen/_3px_in720p"
            android:layout_toRightOf="@+id/img"
            android:maxLines="1"
            android:text="wo"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_35px_in720p" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_marginBottom="@dimen/_3px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_toRightOf="@+id/img"
            android:maxLines="1"
            android:text="11111111111111111111111111"
            android:textColor="@color/grey"
            android:textSize="@dimen/_28px_in720p" />

        <ImageView
            android:layout_width="@dimen/_20px_in720p"
            android:layout_height="@dimen/_40px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@drawable/ru" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@color/pop_txt_bg" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px_in720p"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ignore"
            android:layout_width="@dimen/_150px_in720p"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px_in720p"
            android:gravity="center"
            android:padding="@dimen/_10px_in720p"
            android:text="忽略"
            android:background="@drawable/new_card_bt_bg"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/add"
            android:layout_width="@dimen/_150px_in720p"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px_in720p"
            android:gravity="center"
            android:padding="@dimen/_10px_in720p"
            android:text="添加"
            android:background="@drawable/new_card_bt_bg1"
            android:textColor="@color/white"
            android:textSize="@dimen/_30px_in720p" />

    </LinearLayout>

    <View
        android:background="@color/pop_txt_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20px_in720p"/>

</LinearLayout>