<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_160px_in720p"
        android:layout_height="@dimen/_160px_in720p"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/credit_bg"
        >

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="@dimen/_70px_in720p"
            android:layout_height="@dimen/_70px_in720p"
             />

        <TextView
            android:id="@+id/news_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20px_in720p"
            android:singleLine="true"
            android:text="新闻"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_26px_in720p" />

    </LinearLayout>

</LinearLayout>