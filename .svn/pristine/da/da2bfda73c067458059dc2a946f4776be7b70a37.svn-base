<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_10px_in720p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_35px_in720p" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="ddddddddddddddddddd"
            android:textColor="@color/gray"
            android:textSize="@dimen/_35px_in720p" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_10px_in720p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申报原因"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_35px_in720p" />

        <TextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="ddddddddddddddddddddssssssssssssssssssssssss"
            android:textColor="@color/gray"
            android:textSize="@dimen/_35px_in720p" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_10px_in720p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理结果"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_35px_in720p" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="处理中.."
            android:textColor="@color/red_title"
            android:textSize="@dimen/_35px_in720p" />

    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:text="111111"
        android:textColor="@color/gray"
        android:textSize="@dimen/_35px_in720p" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:background="@color/pop_txt_bg" />

</LinearLayout>