<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/red_title">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_marginLeft="@dimen/_30px_in720p"
                android:id="@+id/back_img"
                android:layout_width="@dimen/_20px_in720p"
                android:layout_height="@dimen/_35px_in720p"
                android:background="@drawable/back" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/_35px_in720p" />


        <LinearLayout
            android:id="@+id/more"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more_img"
                android:layout_width="@dimen/_30px_in720p"
                android:layout_height="@dimen/_35px_in720p"
                android:background="@color/yellow"
                android:visibility="gone" />

            <TextView
                android:id="@+id/more_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_32px_in720p"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>