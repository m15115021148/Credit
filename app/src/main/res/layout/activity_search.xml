    <TextView
        android:id="@+id/search_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:gravity="center_vertical"
        android:text="名称" />

    <EditText
        android:id="@+id/name"
        android:paddingLeft="@dimen/_10px_in720p"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:background="@drawable/credit_et_bg"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@color/pop_txt_bg" />

    <TextView
        android:id="@+id/search_code"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:gravity="center_vertical"
        android:text="身份证号码" />

    <EditText
        android:id="@+id/code"
        android:paddingLeft="@dimen/_10px_in720p"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:background="@drawable/credit_et_bg"
        android:singleLine="true" />

    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_120px_in720p"
        android:background="@drawable/zcsub">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查询"
            android:textColor="@drawable/search_bt_bg" />
    </RelativeLayout>
</LinearLayout>
