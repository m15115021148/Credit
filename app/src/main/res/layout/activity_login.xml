<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/red_title">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_20px_in720p"
                android:layout_height="@dimen/_35px_in720p"
                android:layout_marginLeft="@dimen/_30px_in720p"
                android:background="@drawable/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/_35px_in720p" />

            <TextView
                android:id="@+id/person"
                android:layout_width="@dimen/_142px_in720p"
                android:layout_height="@dimen/_58px_in720p"
                android:background="@drawable/gr_bg"
                android:singleLine="true"
                android:textSize="@dimen/_35px_in720p"
                android:visibility="gone" />

            <TextView
                android:id="@+id/company"
                android:layout_width="@dimen/_142px_in720p"
                android:layout_height="@dimen/_58px_in720p"
                android:background="@drawable/qy_bg"
                android:singleLine="true"
                android:textSize="@dimen/_35px_in720p"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_30px_in720p"
            android:gravity="center"
            android:singleLine="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/_35px_in720p" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/RegisterLayoutStyle"
        android:layout_marginTop="@dimen/_80px_in720p">

        <EditText
            android:id="@+id/login_code"
            style="@style/RegisterEditStyle"
            android:hint="请输入登录名(数字或字母组成)"
            android:inputType="text" />

        <TextView
            style="@style/RegisterTextStyle"
            android:layout_alignLeft="@+id/login_code"
            android:background="@drawable/register_autor" />
    </RelativeLayout>

    <RelativeLayout style="@style/RegisterLayoutStyle">

        <EditText
            android:id="@+id/login_psw"
            style="@style/RegisterEditStyle"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <TextView
            style="@style/RegisterTextStyle"
            android:layout_alignLeft="@+id/login_psw"
            android:background="@drawable/register_psw" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_88px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_60px_in720p"
        android:background="@drawable/zcsub"
        android:gravity="center"
        android:text="登录"
        android:textColor="@drawable/search_bt_bg"
        android:textSize="@dimen/_31px_in720p" />
</LinearLayout>
