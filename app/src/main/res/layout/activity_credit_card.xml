<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.sitemap.weifang.activity.CreditCardActivity">

    <include
        android:id="@+id/card_title"
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/credit_card_qr"
        android:layout_width="@dimen/_320px_in720p"
        android:layout_height="@dimen/_320px_in720p"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_80px_in720p"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_80px_in720p"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60px_in720p"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_50px_in720p"
                android:layout_height="@dimen/_50px_in720p"
                android:background="@drawable/user_head"
                />

            <TextView
                android:singleLine="true"
                android:textSize="@dimen/_28px_in720p"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_15px_in720p"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60px_in720p"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_50px_in720p"
                android:layout_height="@dimen/_50px_in720p"
                android:background="@drawable/user_tel"
                />

            <TextView
                android:singleLine="true"
                android:textSize="@dimen/_28px_in720p"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_15px_in720p"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60px_in720p"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_50px_in720p"
                android:layout_height="@dimen/_50px_in720p"
                android:background="@drawable/user_email"
                />

            <TextView
                android:singleLine="true"
                android:textSize="@dimen/_28px_in720p"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_15px_in720p"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60px_in720p"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_50px_in720p"
                android:layout_height="@dimen/_50px_in720p"
                android:background="@drawable/user_company"
                />

            <TextView
                android:singleLine="true"
                android:textSize="@dimen/_28px_in720p"
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
